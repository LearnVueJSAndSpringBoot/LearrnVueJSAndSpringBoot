<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectPRMIS1404">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.example.projectPRMIS1404.activity.ReviewActivity"></activity>
        <activity android:name="com.example.projectPRMIS1404.activity.ImageActivity" />
        <activity android:name="com.example.projectPRMIS1404.activity.LoginActivity" />
        <activity android:name="com.example.projectPRMIS1404.activity.RegisterActivity" />
        <activity android:name="com.example.projectPRMIS1404.activity.FindByPriceActivity" />
        <activity android:name="com.example.projectPRMIS1404.activity.FindActivity" />
        <activity android:name="com.example.projectPRMIS1404.activity.OnBoradingActivity" />
        <activity android:name="com.example.projectPRMIS1404.activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name="com.example.projectPRMIS1404.activity.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name="com.example.projectPRMIS1404.activity.DetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.projectPRMIS1404.main.MainActivity" ></activity>
    </application>

</manifest>